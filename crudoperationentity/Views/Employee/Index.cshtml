@model IEnumerable<crudoperationentity.Models.Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

<div>
    <a asp-action="Create" asp-controller="Employee" class="btn btn-outline-info">Add Employee</a>
    <h1>Employee Record</h1>
    <table class="table table-bordered Employee" id="Employee" data-role=datatable >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Salary</th>
                <th>Gender</th>
                <th>Address</th>                                           
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var er in Model)
            {
                <tr>
                    <td>@er.Id</td>
                    <td>@er.Name</td>
                    <td>@er.Age</td>
                    <td>@er.Salary</td>
                    <td>@er.Gender</td>
                    <td>@er.Address</td>
                    <td>
                        <a asp-action="Update" asp-controller="Employee" asp-route-id="@er.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-controller="Employee" asp-route-id="@er.Id"
                           class="btn btn-danger" onclick=" return confirm('Do you want to delete this Employee Record ?'">Delete </a>
                    </td>

                </tr>
            }
        </tbody>

    </table>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.js">
</script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js">
</script>
