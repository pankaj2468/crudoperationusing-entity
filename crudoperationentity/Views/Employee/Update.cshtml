@model crudoperationentity.Models.Employee
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <div class="card-title"><h4>Edit Employee</h4></div>
            </div>
            <div class="card-body">
                <form asp-action="Update" asp-controller="Employee" method="post">

                    <div class="form-group">
                        <label>Employee Name</label>
                        <input type="hidden" asp-for="Id" />
                        <input type="text" class="form-control" asp-for="Name" />
                    </div>

                    <div class="form-group">
                        <label>Employee Age</label>
                        <input type="text" class="form-control" asp-for="Age" />
                    </div>

                    <div class="form-group">
                        <label>Employee Salary</label>
                        <input type="text" class="form-control" asp-for="Salary" />
                    </div>

                    <div class="form-group">
                        <label>Employee Address</label>
                        <input type="text" class="form-control" asp-for="Address" />
                    </div>
                    <div class="form-group">
                        <label>Employee Gender</label>
                        <select asp-for="Gender" class="form-control">
                            <option value="">---select---</option>
                            <option value="Male">male</option>
                            <option value="Female">female</option>
                            <option value="transgender">transgender</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-outline-success" value="Update" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

